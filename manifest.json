{
  "manifest_version": 2,
  "name": "DuckDuckGo Wikipedia",
  "version": "1.1",

  "description": "Search engine extension to go to the top DuckDuckGo site:wikipedia.org search result",

  "icons": {
    "48": "icons/wikipedia48.png"
  },

  "chrome_settings_overrides": {
    "search_provider": {
      "name": "DuckDuckGo Wikipedia",
      "search_url": "https://html.duckduckgo.com/html/",
      "search_url_post_params": "q=\\site:wikipedia.org {searchTerms}",
      "keyword": "w",
      "encoding": "UTF-8",
      "favicon_url": "https://en.wikipedia.org/static/favicon/wikipedia.ico"
    }
  }
}